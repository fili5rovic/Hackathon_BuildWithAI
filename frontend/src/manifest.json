{
  "manifest_version": 3,
  "name": "Simple Text Highlighter",
  "version": "1.0",
  "description": "Highlights the word 'highlight' on web pages.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
